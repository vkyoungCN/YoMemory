<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vkyoungcn.smartdevices.yomemory.GroupsAndMissionDetailActivity"
    android:orientation="vertical">

    <!--页面上部，横向llt-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal">

        <!--上部的左半llt-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mission_detail_name_GMDA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/mission_name_default"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e0e0"
                />

            <TextView
                android:id="@+id/tv_mission_detail_description_GMDA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="2"
                android:padding="4dp"
                android:text="@string/mission_description_extra"
                android:textSize="14sp"
                />

        </LinearLayout>

        <!--竖向分割线-->
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#efefef" />

        <!--上部的右半区域-->
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="96dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="12sp"
                android:text="@string/number_of_groups"
                android:background="#f5f5f5"
                />

            <!--分割线-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"
                />
            <TextView
                android:id="@+id/numberOfTotalGroupsOfMission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#4527a0"
                android:text="@string/num_18"
                android:background="#f5f5f5"
                />

        </LinearLayout>
    </LinearLayout>

    <!--Rv部分上部的条纹分割线、题头，与Rv独立并列-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:src="@drawable/slash_bars_red"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:textSize="20sp"
            android:gravity="center"
            android:text="@string/groups_list"
            android:background="#f8f8f8"
            />
        <!--横向分割线-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#efefef"
            />

    </LinearLayout>

    <!--下部，Rv区域。含遮盖区-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--遮盖区-->
        <FrameLayout
            android:id="@+id/maskOverRv_MissionDetail_GMDA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:gravity="center"
                android:text="@string/hold_on_a_moment"/>
        </FrameLayout>

        <!--Rv部分-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/groups_in_single_mission_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </FrameLayout>




</LinearLayout>
