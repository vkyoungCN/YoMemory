<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.LearningCreateOrderDiaFragment">

    <!--撑开宽度。如果没有具体宽度，即使全用match则宽度也按wrap计算-->
    <TextView
        android:layout_width="300dp"
        android:layout_height="1dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="#efefef"
        android:gravity="center"
        android:paddingEnd="36dp"
        android:paddingStart="36dp"
        android:text="@string/title_dfg_learningAddOrder"
        android:textSize="16sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_margin="2dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:lines="2"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:text="@string/explanations_learningAddOrder"
        android:textColor="#ffe52525" />

    <!--横分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/yo_light_green"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/btn_cancel_learningAddOrder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:background="#f5f5f5"
            android:gravity="center"
            android:text="@string/cancel"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btn_confirm_learningAddOrder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_weight="3"
            android:background="#e0e0e0"
            android:gravity="center"
            android:text="@string/confirm"
            android:textSize="16sp"

            />


    </LinearLayout>


</LinearLayout>