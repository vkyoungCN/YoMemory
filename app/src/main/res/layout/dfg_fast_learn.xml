<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.CreateGroupDiaFragment">
    <!--撑开宽度。如果没有具体宽度，即使全用match则宽度也按wrap计算-->
    <TextView
        android:layout_width="300dp"
        android:layout_height="1dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="@string/fast_learn_2"
        android:gravity="center"
        android:textSize="16sp"
        android:background="#efefef"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp" />
    <!--横分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efefef"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/random_or_order"
            android:padding="4dp"
            android:gravity="center"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#efefefef"
            />

        <RadioGroup
            android:id="@+id/rg_manner_dfgFL"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="2dp"
            >

            <RadioButton
                android:id="@+id/rb_random_dfgFl"
                android:padding="2dp"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:text="@string/random"
                android:checked="true"
                />
            <RadioButton
                android:id="@+id/rb_order_dfgFl"
                android:padding="2dp"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:checked="true"
                android:text="@string/Order"/>



        </RadioGroup>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#efefefef"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <CheckBox
                android:id="@+id/ckb_setAsDefault_dfgFL"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/set_as_default"
                android:textSize="12sp"
                android:layout_gravity="start"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="2dp"
                android:textSize="10sp"
                android:textColor="@android:color/holo_orange_dark"
                android:lines="1"
                android:text="@string/commit_when_confirm"/>

        </FrameLayout>


    </LinearLayout>

    <!--横分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efefef"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tip_fastLearn_1"
        android:gravity="center"
        android:padding="6dp"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        />
    <Space
    android:layout_width="match_parent"
    android:layout_height="12dp" />

    <!--横分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efefef"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        >

        <CheckBox
            android:id="@+id/ckb_noMoreTipBox_dfgFL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/no_more_show"
            android:textColor="@android:color/holo_orange_dark"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="4dp"
            android:textSize="10sp"
            android:lines="1"
            android:text="@string/could_change_in_setting"/>
    </FrameLayout>

    <!--横分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#b2ff59"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/btn_cancel_dfgFL"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="2dp"
            android:text="@string/cancel"
            android:textSize="16sp"
            android:background="#f5f5f5"

            />

        <TextView
            android:id="@+id/btn_ok_dfgFL"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="2dp"
            android:text="@string/confirm_go"
            android:textSize="16sp"
            android:background="#e0e0e0"

            />


    </LinearLayout>


</LinearLayout>