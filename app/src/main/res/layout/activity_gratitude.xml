<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GratitudeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="@string/gratitude"
            android:background="#e0e0e0"
            android:textSize="16sp" />
        <!--横分割线-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yo_light_green"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:scaleType="centerInside"
            android:src="@drawable/du_cash_code" />

        <!--横分割线-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yo_red"
            />

        <!--作者简介标题-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"

            android:background="#f5f5f5"
            android:textSize="16sp"
            android:text="@string/author_Info_0"

            />
        <!--简介文本-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:background="#f5f5f5"
            android:text="@string/author_and_cash"

            />

    </LinearLayout>



</ScrollView>