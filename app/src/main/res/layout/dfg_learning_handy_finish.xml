<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp"
    tools:context=".fragments.LearningTimeUpDiaFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:padding="4dp"
        android:gravity="center"
        android:text="@string/confirm_question"
        android:textSize="16sp"
        android:background="#efefef"
        />

    <!--信息区-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_empty_dfgLHFinish"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="@string/empty_info_un_correct"
            />
        <!--横分割线-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aaaaaa"
            />
        <TextView
            android:id="@+id/tv_wrong_dfgLHFinish"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:gravity="center"
            android:text="@string/wrong_info_un_correct"
            />
        <!--横分割线-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aaaaaa"
            />
        <TextView
            android:id="@+id/tv_restTime_dfgLHFinish"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:gravity="center"
            android:background="#efefef"
            android:text="@string/rest_min_and_sec"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/tvBtn_confirm_dfgLHFinish"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="@string/confirm"
        android:textSize="18sp"
        android:background="#8bc34a"
        />
    <TextView
        android:id="@+id/tvBtn_back_dfgLHFinish"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/back_2"
        android:background="#eeff41"
        />

    <TextView
        android:id="@+id/tvBtn_giveUp_dfgLHFinish"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:text="@string/give_up_2"
        android:background="#efefef"
        />

</LinearLayout>